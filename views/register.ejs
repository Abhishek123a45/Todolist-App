<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="styles/login.css">
    <title>Login</title>
</head>
<body>

    <div class="login-container">
        <div class="logo-header">
            <div class="logo"><img src="images/logo.png" alt="logo"></div>
        </div>

        <div class="login-text">
            <h3>Register</h3>
            <hr class="register-line">
        </div>

        <div class="login-credentials">
            <form action="/register" method="POST">
                <div class="login-email">
                    <input type="text" name = "userName" class="input-box">
                    <img src="images/icons8-user-48.png" alt="user">
                </div>
                <div class="login-email">
                    <input type="email" name = "email" class="input-box">
                    <img src="images/icons8-email-50.png" alt="email">
                </div>
                <div class="login-password">
                    <input type="password" name = "password" class="input-box">
                    <img src="images/icons8-lock-60.png" alt="user">
                </div>
                
                <div class="login-submit">
                    <input type="submit" class="submit-button">
                </div>
            </form>
        </div>

        <div class="dont-have-an-account">
            <p>Already have an account? <a href="/login">Login</a></p>
        </div>
    </div>
    <script>
        document.addEventListener("keydown", (e) => {
            if (e.key === 'Enter' && e.target.tagName.toLowerCase() !== 'textarea') {
            document.getElementById('myForm').submit();
            }
        });

    </script>
</body>
</html>